<zone target="DROP">
  <short>{{database_zone}}</short>
  <description>Zone for database server</description>
  <rule family="ipv4">
    <source address="{{bastion_ip}}"/>
    <service name="sshd"/>
    <accept/>
  </rule>
  <rule family="ipv4">
    <source address="{{webserver_ip}}"/>
    <service name="mariadb"/>
    <accept/>
  </rule>
</zone>
